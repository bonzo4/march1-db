{
  "version": "1.0.5",
  "name": "march1-db",
  "module": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "start": "bun src/index.ts",
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit check && drizzle-kit migrate",
    "build": "bun build --target=node ./src/index.ts --outfile=dist/index.js && bun run build:declaration",
    "build:declaration": "tsc --emitDeclarationOnly --project tsconfig.types.json",
    "postbuild": "rimraf tsconfig.types.tsbuildinfo",
    "publish": "bun run build && bun publish"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.4",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "better-auth": "^1.1.18",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.3",
    "pg": "^8.13.3"
  },
  "files": [
    "dist/*.js",
    "dist/*.d.ts"
  ]
}
